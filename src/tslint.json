{
    "extends": "../tslint.json",
    "rules": {
        "directive-selector": [
            true,
            "attribute",
            "app",
            "camelCase"
        ],
        "comment-format": [
          true,
          "check-space"
        ],
        "component-selector": [
            true,
            "element",
            "app",
            "kebab-case"
        ],
        "autoFixOnSave": true,
        "import-spacing": true,
    }
}
